# Staging Environment Configuration
# Copy to .env when running staging locally

# Django settings
SECRET_KEY=staging-secret-key-change-in-railway
DEBUG=True
ALLOWED_HOSTS=api-staging.yourapp.railway.app,localhost,127.0.0.1

# Database (Railway provides this automatically)
# DATABASE_URL=postgres://user:pass@host:5432/staging_db

# CORS - Allow staging frontend
CORS_ALLOWED_ORIGINS=https://staging--yourapp.netlify.app,http://localhost:3000

# Cloudinary (use separate folder or account for staging)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
# Use folder prefix for staging: staging/uploads/

# OpenAI (same key, but consider usage limits)
OPENAI_API_KEY=sk-your-openai-api-key

# Email (use test mode or sandbox)
# SENDGRID_API_KEY=your-sendgrid-api-key
# Use sandbox mode for staging

# Feature flags
ENABLE_EMAIL_SENDING=False
ENABLE_AI_FEATURES=True
